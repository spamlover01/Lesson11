<AdminAppLayout>:
    BoxLayout:                                                          # – линейное размещение
        orientation: 'vertical'
        padding: dp(10)                                                 #[слева, сверху, справа, снизу]
        spacing: dp(6)

        GridLayout:                                                     # – табличное размещение

            canvas.before:
                Color:
                    rgba: 0, 1, 0, 1
                Line:
                    width: 1
                    rectangle: (self.x, self.y, self.width, self.height)

            cols: 3
            size_hint_x: 0.7
            size_hint_y: 0.2
            height: self.minimum_height
            width: dp(500)
            spacing: dp(10)

            FilterInput:
                id: filter_pu_no
                hint_text: '№ ПУ'
                size_hint_y: None
                height: dp(28)

            FilterInput:
                id: filter_address
                hint_text: 'Адрес'
                size_hint_y: None
                height: dp(28)

            FilterInput:
                id: filter_coeff
                hint_text: 'Коэфф'
                size_hint_y: None
                height: dp(28)

            FilterInput:
                id: filter_consumer
                hint_text: 'Потребитель'
                size_hint_y: None
                height: dp(28)

            FilterInput:
                id: filter_contract
                hint_text: '№ Договора'
                size_hint_y: None
                height: dp(28)

            FilterInput:
                id: filter_file
                hint_text: 'Файл'
                size_hint_y: None
                height: dp(28)
        Widget:
            size_hint_y: 0.3
            size_hint_x: 0.7
            canvas.before:
                Color:
                    rgba: 1, 0, 0, 1
                Line:
                    width: 1
                    rectangle: (self.x, self.y, self.width, self.height)
        Widget:
            size_hint_y: 0.6
            size_hint_x: 0.7
            canvas.before:
                Color:
                    rgba: 0, 0, 1, 1
                Line:
                    width: 1
                    rectangle: (self.x, self.y, self.width, self.height)