# loginscreen.kv
<LoginScreen>:
    orientation: 'vertical'
    padding: dp(40), dp(60)
    spacing: dp(10)

    Label:
        text: 'Авторизация'
        font_size: dp(20)
        size_hint_y: None
        height: dp(40)

    TextInput:
        id: username_input
        hint_text: 'Логин'
        multiline: False
        write_tab: False
        size_hint_y: None
        height: dp(36)
        font_size: dp(14)

    TextInput:
        id: password_input
        hint_text: 'Пароль'
        password: True
        multiline: False
        write_tab: False
        size_hint_y: None
        height: dp(36)
        font_size: dp(14)

    Label:
        id: error_message_label
        text: ''
        color: 1, 0, 0, 1
        size_hint_y: None
        height: dp(20)
        font_size: dp(12)

    Button:
        id: login_button
        text: 'Войти'
        size_hint_y: None
        height: dp(36)
        on_release:
            app.check_credentials(username_input.text, password_input.text)
