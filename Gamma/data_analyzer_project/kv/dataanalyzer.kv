# dataanalyzer.kv
#:import dp kivy.metrics.dp

BoxLayout:
    orientation: 'vertical'
    spacing: dp(4)
    padding: dp(6)

    BoxLayout:
        size_hint_y: None
        height: dp(36)
        spacing: dp(4)

        Button:
            text: 'Файл'
            size_hint_x: None
            width: dp(100)
            on_release: app.file_dropdown.open(self)

        Button:
            id: admin_menu_button
            text: 'Админ'
            size_hint_x: None
            width: dp(100)
            on_release: app.admin_dropdown.open(self)

    AdminAppLayout:
        id: admin_panel
