<!-- filter_input.kv -->
<FilterInput>:
    orientation: 'vertical'
    spacing: dp(2)
    size_hint_y: None
    height: dp(24)

    TextInput:
        id: text_input
        text: root.text
        hint_text: root.hint_text
        size_hint_y: None
        height: root.height
        multiline: False
        on_text: root.on_text_input(self, self.text)
        on_focus: root.open_dropdown(self) if self.focus else None
        write_tab: False
        halign: 'center'
        valign: 'middle'
        text_size: self.size
        font_size: dp(14)

    # DropDown появляется автоматически, сам по себе здесь не отображается

<RV@RecycleView>:
    viewclass: 'SelectableButton'
    size_hint_y: None
    RecycleBoxLayout:
        default_size: None, dp(44)
        default_size_hint: 1, None
        size_hint_y: None
        height: self.minimum_height
        orientation: 'vertical'

<SelectableButton@Button>:
    size_hint_y: None
    height: dp(44)
    halign: 'left'
    text_size: self.size
    padding_x: dp(10)
    shorten: True
